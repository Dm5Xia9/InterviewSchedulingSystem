@model InterviewSchedulingSystem.ViewModels.AccountViewModels.RegisterViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<form method="post" asp-controller="Account" asp-action="Register" class="form-material w-400 block-center m-t-40">
    <div asp-validation-summary="ModelOnly"></div>
    <h2>Регистрация нового пользователя</h2>
    <div class="form-group">
        <input class="form-control form-control-line" placeholder="Почта" asp-for="Email">
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <input class="form-control form-control-line" placeholder="Пароль" asp-for="Password">
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <input class="form-control form-control-line" placeholder="Еще пароль" asp-for="PasswordConfirm">
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <p>
        <center><button type="submit" class="detail-a btn-success btn-calendar waves-effect waves-light">Регистрация</button></center>
    </p>
</form>
@section Styles{
    <link href="~/admin/css/VacancyCreate.css" rel="stylesheet" />
}
@section Scripts {
    <script src="~/js/mask.init.js"></script>
    <script src="~/lib/horizontal-timeline/js/horizontal-timeline.js"></script>
}