@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model InterviewSchedulingSystem.Areas.AutoLink.ViewModels.InviteViewModel

<form method="post" asp-controller="AutoLink" asp-action="Invite" class="form-material w-400 block-center m-t-40">
    <div asp-validation-summary="ModelOnly"></div>
    <h2>Вход</h2>
    <div class="form-group row">
        <div class="col-10">
            <input type="text" class="form-control phone-inputmask" id="phone-mask" placeholder="Номер телефона" asp-for="telephone">
        </div>
    </div>

    <div class="form-group" style="display:none;">
        <input class="form-control form-control-line" placeholder="magic" asp-for="link">
    </div>
    <p>
        <center><button type="submit" class="detail-a btn-success btn-calendar waves-effect waves-light">Войти</button></center>
    </p>
</form>
@section Styles{
    <link href="~/admin/css/VacancyCreate.css" rel="stylesheet" />
}
@section Scripts {
    <script src="~/js/mask.init.js"></script>
    <script src="~/lib/horizontal-timeline/js/horizontal-timeline.js"></script>
}
