            <span class="bar"></span>
            <label for="input1">Название</label>
        </div>
        <div style="display:flex">
            <a asp-controller="Template" asp-action="Index">
                <div class="save-active-calendar-block btn-success btn-calendar waves-effect waves-light">
                    Назад
                </div>
            </a>
            &nbsp
            <div class="save-active-calendar-block btn-success btn-calendar waves-effect waves-light">
                Создать
            </div>
        </div>
    </div>
